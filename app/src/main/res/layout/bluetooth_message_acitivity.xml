<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBDCF8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/top_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_semibold"
                android:text="Message"
                android:textColor="#474FE4"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="390dp"
            android:translationY="-120dp">

            <Button
                android:id="@+id/clearButton"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:layout_marginLeft="90dp"
                android:background="@drawable/rounded_button"
                android:fontFamily="@font/poppins_semibold"
                android:text="Clear"
                android:textAllCaps="false"
                android:textColor="#474FE4"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/sendButton"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="90dp"
                android:background="@drawable/rounded_button"
                android:fontFamily="@font/poppins_semibold"
                android:text="Send"
                android:textAllCaps="false"
                android:textColor="#474FE4"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </RelativeLayout>

    <EditText
        android:id="@+id/messageToSend"
        android:layout_width="480dp"
        android:layout_height="152dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:background="@drawable/dark_corner_bolder"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="top"
        android:hint="     Please input message to send..."
        android:textAlignment="viewStart"
        android:textSize="15sp"
        android:translationY="-20dp" />


    <TextView
        android:id="@+id/messageToReceive"
        android:layout_width="480dp"
        android:layout_height="152dp"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:background="@drawable/dark_corner_bolder"
        android:elegantTextHeight="false"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="top"
        android:hint="     Received message will appear here"
        android:textAlignment="viewStart"
        android:textSize="15sp"
        android:translationY="350dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotationX="180"
        android:translationY="550dp"
        fab:srcCompat="@drawable/top_background2" />

</RelativeLayout>